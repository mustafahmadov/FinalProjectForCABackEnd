@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>
                    Əsas Səhifə
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Qeydiyyat</li>
        </ol>
    </nav>
</div>

<section class="register text-center bg-light">
    <div class="register-area pt-150 pb-150">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6 col-md-offset-3 text-center">
                    <div class="login">
                        <div class="login-form-container mt-5 mb-5">
                            <div class="login-text">
                                <h2 class="font-weight-normal text-center mb-3">Qeydiyyatdan keç</h2>
                                <span>Saytımızın xidmətlərindən istifadə etmək üçün qeydiyyatdan keçin</span>
                            </div>
                            <div class="login-form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form class="pt-3" method="post">
                                    <div class="form-group">
                                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Adınız">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Surname" class="form-control form-control-lg" placeholder="Soyadınız">
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="UserName" class="form-control form-control-lg" placeholder="İstifadəçi adı">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Email ünvanı">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Əlaqə telefonu">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Şifrə">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="CheckPassword" class="form-control form-control-lg" placeholder="Şifrənin təkrarı">
                                        <span asp-validation-for="CheckPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-block btn-register" value="Hesabı yarat" />
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Artıq hesabınız var? <a asp-action="Login" class="text-primary">Daxil ol</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



