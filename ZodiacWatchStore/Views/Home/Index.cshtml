@model HomeVM
@{
    ViewData["Title"] = "Home Page";
    bool isActive = true;
}



<!-- ===========HEADER END =========== -->

<section class="carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="container">
                    <div class="owl-carousel owl-theme mini-carousel">
                        @await Component.InvokeAsync("ProductCarousel", new { filterFor = "discountproducts" })
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (Slider slider in Model.Sliders)
                        {
                            <div class=" carousel-item @(isActive ? "active" : "")">
                                <img class="d-block w-100" src="~/assets/images/@slider.Image"
                                     alt="First slide">
                            </div>
                            isActive = false;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                       data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class="row flex-column">
                    <div class="col-sm-4 col-md-4 col-lg-12">
                        <div class="pay-image">
                            <img src="~/assets/images/hisse_hisse_ode_az.jpg" alt="" class="img-fluid">
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-12">
                        <div class="pay-image">
                            <img src="~/assets/images/tehlukesiz_odenish_az.jpg" alt="" class="img-fluid">
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-12">
                        <div class="pay-image">
                            <img src="~/assets/images/web_deliver_banner_az.jpg" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>

<section class="site-guarantees">
    <div class="section-heading">
        <h1>Üstünlüklərİmİz</h1>
        <hr>
    </div>
    <div class="container">
        <div class="row">
            @foreach (Guarantee guarantee in Model.Guarantees)
            {
                <div class="col-sm-6 col-md-6 col-lg-3">
                    <div class="icon-area">
                        @Html.Raw(guarantee.Icon)
                        <p>@guarantee.Title</p>
                    </div>

                </div>
            }
        </div>
    </div>

</section>'

<section class="newProduct">
    <div class="section-heading">
        <h1>Ən yenİ məhsullarımız</h1>
        <hr>
    </div>

    <div class="container">
        <div class="owl-carousel owl-theme big-carousel">
            @await Component.InvokeAsync("ProductCarousel", new { filterFor = "newproducts" })
        </div>
    </div>
</section>

<!--? Gallery Area Start -->
<div class="gallery-area">
    <div class="container-fluid p-0 fix">
        <div class="row">
            <div class="col-xl-6 col-lg-4 col-md-6 col-sm-6 pr-0 none">
                <div class="single-gallery 0">
                    <div class="gallery-img big-img"
                         style="background-image: url(assets/images/gallery/gallery1.png);"></div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 pl-0 none">
                <div class="single-gallery 0">
                    <div class="gallery-img big-img"
                         style="background-image: url(assets/images/gallery/gallery2.png);"></div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4 col-md-12 pl-0">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-6 col-sm-6 pl-0">
                        <div class="single-gallery 0">
                            <div class="gallery-img small-img"
                                 style="background-image: url(assets/images/gallery/gallery3.png);"></div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12  col-md-6 col-sm-6 pl-0">
                        <div class="single-gallery 0">
                            <div class="gallery-img small-img"
                                 style="background-image: url(assets/images/gallery/gallery4.png);"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Gallery Area End -->

