@model List<Brand>
@{
    ViewData["Title"] = "Index";
}

<section class="p-0 mt-n11">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-wrap align-items-center text-center bg-white shadow">
                    @foreach (Brand brand in Model)
                    {
                        <div class="clients-logo" style="padding: 25px 50px;">
                            <a asp-controller="Product" asp-action="Index" asp-route-id="@brand.Id">
                                <img class="img-fluid" src="~/assets/images/@brand.Image" alt="">
                            </a>
                            
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

