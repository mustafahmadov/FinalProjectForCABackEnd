@model Slider
@{ ViewData["Title"] = "Delete"; }
<div class="col-lg-8 offset-lg-2">
    <div class="row">
        <img src="~/assets/images/banner/@Model.Image" width="410px" height="300px" />
    </div>
    <div class="row mt-3">@Model.Image</div>
    <div class="row mt-3">
        <a asp-action="Index" class="btn btn-dark">Go back</a>
        <form method="post">
            <button type="submit" class="btn btn-danger ml-2">Delete</button>
        </form>
    </div>
</div>

