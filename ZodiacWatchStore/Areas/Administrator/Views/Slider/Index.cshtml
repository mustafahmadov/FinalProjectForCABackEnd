@model List<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
        <div class="col-lg-8 offset-lg-2 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slayderlər(Reklam Lövhələri)</h4>
                    @if (@Model.Count() < 8)
                    {
                     <a asp-action="Create" class="btn btn-primary mt-3">YENİSİNİ YARAT</a>
                    }

                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Şəkil
                                    </th>
                                    <th>
                                        
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slider item in Model)
                                {
                                <tr>
                                    <td class="text-center">
                                        <img src="~/assets/images/banner/@item.Image" style="width:160px; height:120px; border-radius:0;" />
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>




