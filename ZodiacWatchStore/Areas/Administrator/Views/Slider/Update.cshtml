@model Slider
@{ ViewData["Title"] = "Update"; }

<div class="row mt-3">
    <div class="col-lg-8 offset-lg-2 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slaydı(reklam lövhəsini)yenilə</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" placeholder="Name">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <a asp-action="Index" class="btn btn-dark mr-3">Geriyə qayıt</a>
                    <button type="submit" class="btn btn-warning mr-2">Yenilə</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}
