@model Bio
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-10 offset-lg-1 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Üst/Alt başlıq</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Loqo1
                                </th>
                                <th>
                                    Loqo2
                                </th>
      
                                <th>
                                    Proseslər
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                                <tr>
                                    <td class="text-center">
                                        <img src="~/assets/images/@Model.LogoBlack" style="width:180px; height:80px; border-radius:0;" />
                                    </td>
                                    <td class="text-center" style="background-color: #9f9c9c;">
                                        <img src="~/assets/images/@Model.LogoWhite" style="width:180px; height:80px; border-radius:0;" />
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-success">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
      
    </div>
</div>

