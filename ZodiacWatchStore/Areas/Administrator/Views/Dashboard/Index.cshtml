
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center" >
    <div class="column">
        <div class="card">
            <p><i class="fa fa-user"></i></p>
            <h3>@ViewBag.UserCount+</h3>
            <p>Istifadəçilərin sayı</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <p><i class="fa fa-check"></i></p>
            <h3>@ViewBag.ProductCount+</h3>
            <p>Məhsulların sayı</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <p><i class="fa fa-smile-o"></i></p>
            <h3>@ViewBag.SaleCount+</h3>
            <p>Çatdırılan sifarişlər</p>
        </div>
    </div>

    <div class="column">
        <div class="card">
            <p><i class="fa fa-coffee"></i></p>
            <h3>@ViewBag.TotalEarnings+</h3>
            <p>Çatdırılan sifarişlərdən gəlir</p>
        </div>
    </div>
</div>

<a class="dashboardItem" asp-controller="Sale" asp-action="Index">@ViewBag.SaleWhichIsWaiting yeni sifariş var => Statuslarını dəyiş</a>

